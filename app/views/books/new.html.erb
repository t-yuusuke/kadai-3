 <h2>User info</h2>

<h2>New book</h2>
 <%= form_with model: @book do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Opinion</p>
 <%= f.text_area :body %>
 <div><%= f.submit 'Create Book', class: "btn btn-success" %></div>
 <% end %>

<h2>Books</h2>


<% @books.each do |book| %>
<% if book.image.attached? %>
 <%= image_tag book.image, size: "200×200" %>
<% else %>
 <%= image_tag 'no_image', size: "200×200" %>
<% end %>

<%= link_to book.title, book_path(book.id) %>

<%= book.body %>

<% end %>
